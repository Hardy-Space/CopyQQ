<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="120dp"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/messageSwitch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:text="@string/firstNavigateButton"
        android:textColor="@color/mainBack"
        android:textSize="14sp"
        android:background="@drawable/message_selector"/>
    <TextView
        android:id="@+id/phoneSwitch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:text="@string/phoneText"
        android:textColor="@color/mainBack"
        android:textSize="14sp"
        android:background="@drawable/phone_selector"/>



</LinearLayout>